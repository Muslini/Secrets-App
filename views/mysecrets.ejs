<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Your personal secrets for your eyes only!</h1>
        
      <%  userSecrets.forEach(function(atom, index) { const obj = {first : userID, second : index}; const val = JSON.stringify(obj); %>

          <p class="secret-text"><%= atom %></p>
          <form  action="/delete" method="POST">
            <button class="bin" type="submit" value="<%= val %>" name="button"><i class="fa-solid fa-trash"></i></button>
          </form>
      <%  }) %>

    <hr>
    <a class="btn btn-dark btn-lg" href="/secrets" role="button">All Secrets</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <hr>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
  </div>
</div>

<%- include('partials/footer') %>